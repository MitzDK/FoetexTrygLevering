@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav flex-grow-1 list-inline">
        <li style="padding-top: 20px">
            Welcome <b>@User.Identity.Name</b>
        </li>
        <li class="nav-item">
            <form method="post" asp-page="/LogOut">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <a class="btn btn-success" asp-page="Index">Login</a>
}