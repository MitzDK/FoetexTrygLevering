@page
@using FoetexTrygLevering.Models.Items
@using FoetexTrygLevering.Models.Order
@model FoetexTrygLevering.Pages.Users.DeliveryDriver.HomepageModel
@{
    Layout = "Shared/_DeliveryLayout";
}
<table class="table table-bordered table-hover table-striped table-opacity" width="40%">
    <thead>
        <tr class="line-allignment">
            <th>Order ID</th>

            <th >
                <div class="fix-alignment">
                    <div>Postal code</div>
                    <div class="buttons">
                        <form method="post" asp-page="HomepageModel">
                            <input type="submit" value="Sort" asp-page-handler="Sort" class="btn btn-primary btn-resize" />
                        </form>
                    </div>
                </div>
            </th>

            <th>Drop-off Point</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model.PendingOrders != null)
    {
        @foreach (Order ord in Model.PendingOrders)
        {
            <tr>
                <td>
                    @ord.OrderID
                </td>
                <td>
                    @ord.PostalCode
                </td>
                <td>
                    @ord.DeliveryCity, @ord.DeliveryStreet
                </td>
                <td>
                    @ord.TotalPrice
                </td>
                <td>
                    <form method="post">
                        <a asp-page="ActiveOrder" asp-route-id="@ord.OrderID" class="btn btn-success">Claim</a>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <div>
            ord var null
        </div>
    }
    </tbody>
</table>
