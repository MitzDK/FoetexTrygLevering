@page
@using FoetexTrygLevering.Models.Items
@model FoetexTrygLevering.Pages.Users.Customer.HomepageModel
@{
    Layout = "Shared/_CustomerLayout";
}
<p>
    <a class="btn btn-primary" asp-page="ShoppingCart">View Shoppingcart</a>
</p>
<div class="w3-row-padding w3-padding-16 w3-center" id="food">
    @foreach (Item anItem in Model.ItemList)
    {
        <div class="w3-quarter table-border">
            <img src="/Koed.jpg" alt="BILLEDENAVN" style="width: 100%">
            <h3>@anItem.Name</h3>
            <p>Beskrivelse: @anItem.Description</p>
            <p>Pris: @anItem.Price DKK</p>
            <li class="list-inline-item">
                <a class="btn btn-primary btn-sm " type="button" data-toggle="tooltip" data-placement="top" title="Add to cart" asp-page="ShoppingCart" asp-page-handler="AddToCart" asp-route-id="@anItem.ID"><i class="fa fa-shopping-basket"></i></a>
            </li>
        </div>
    }
</div>