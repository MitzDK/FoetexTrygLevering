@page
@using FoetexTrygLevering.Models.Items
@model FoetexTrygLevering.Pages.Users.Customer.HomepageModel
@{ Layout = "Shared/_CustomerLayout"; }
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 265px;
        max-height: 650px;
        height: 650px;
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 50px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .card-image {
        max-height: 200px;
        max-width: 200px;
    }



    .price {
        color: grey;
        font-size: 22px;
    }



    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }



        .card button:hover {
            opacity: 0.7;
        }
</style>

<div class="w3-row-padding w3-padding-16 w3-center" id="food">

 

    @foreach (Item anItem in Model.ItemList)
    {
        <div class="w3-quarter">
            <div class="card">
                <img src="@anItem.ImageName" alt="Item image" style="width:100%">
                <h1>@anItem.Name</h1>
                <p class="price">@anItem.Price</p>
                <p>@anItem.Description</p>
                <p><a class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="top" title="Add to cart" asp-page="ShoppingCart" asp-page-handler="AddToCart" asp-route-id="@anItem.ID"><i class="fa fa-shopping-basket"></i></a></p>
            </div>
        </div>
    }
</div>
