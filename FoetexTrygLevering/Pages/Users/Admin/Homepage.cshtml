@page
@using FoetexTrygLevering.Models.Users
@using FoetexTrygLevering.Models.Items
@model FoetexTrygLevering.Pages.Users.Admin.HomepageModel
@{
    Layout = "Shared/_AdminLayout";
}
<div class="w3-row-padding w3-padding-16 w3-center" id="food">
    @foreach (Item anItem in Model.Items)
    {
        <div class="w3-quarter table-border">
            <img src="/Koed.jpg" alt="BILLEDENAVN" style="width: 100%">
            <h3>@anItem.Name</h3>
            <p>Beskrivelse: @anItem.Description</p>
            <p>Pris: @anItem.Price DKK</p>
            <li class="list-inline-item">
                    <a class="btn btn-primary btn-sm" type="button" data-toggle="tooltip" title="Edit" asp-page="EditItem" asp-route-id="@anItem.ID"><i class="fa fa-edit"></i></a>
                </li>
                <li class="list-inline-item">
                    <a class="btn btn-danger btn-sm " type="button" data-toggle="tooltip" data-placement="top" title="Delete" asp-page="DeleteItem" asp-route-id="@anItem.ID"><i class="fa fa-shopping-basket"></i></a>
                </li>
        </div>
    }
</div>