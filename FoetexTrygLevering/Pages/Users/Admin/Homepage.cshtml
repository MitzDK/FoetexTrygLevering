<div class="w3-row-padding w3-padding-16 w3-center" id="food">



    @foreach (Item anItem in Model.Items)
    {
        <div class="w3-quarter">
            <div class="card">
                <div class="card-body">
                    <img src="@anItem.ImageName" alt="Item image" style="width: 100%">
                    <h1 class="header-size">@anItem.Name</h1>
                    <p class="price">@anItem.Price ,-</p>
                    <p>@anItem.Description</p>
                </div>
                <div class="card-footer">
                    <div class="btn-group-sm"></div>
                    <a class="btn btn-primary btn-sm button-size" type="button" data-toggle="tooltip" data-placement="top" title="Edit item" asp-page="EditItem" asp-page-handler="EditItem" asp-route-id="@anItem.ID"><i class="fa fa-edit"></i></a>

                    <a class="btn btn-danger btn-sm button-size" type="button" data-toggle="tooltip" data-placement="top" title="Trash item" asp-page="DeleteItem" asp-page-handler="DeleteItem" asp-route-id="@anItem.ID"><i class="fa fa-trash"></i></a>
                </div>
            </div>
        </div>

    }
</div>