<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 265px;
        max-height: 575px;
        height: 575px;
        padding-left: 5px;
        padding-right: 5px;
        padding-top: 20px;
        margin: auto;
        text-align: center;
        font-family: arial;
        font-size: 14px;
        border-spacing: 10px;
        margin-left: 4px;
        margin-right: 4px;
        margin-bottom: 20px;
    }

    .card-image {
        max-height: 200px;
        max-width: 200px;
    }



    .price {
        color: grey;
        font-size: 22px;
    }



    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        align-self: end;
    }



        .card button:hover {
            opacity: 0.7;
        }

    .header-size {
        font-size: 24px;
    }

    .card-footer {
        background: transparent;
    }
    .button-size {
        width: 90px;
        height: 50px; 
    }
</style>

