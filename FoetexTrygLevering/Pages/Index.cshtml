@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Login</h1>
<form method="post">
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" name="UserName"/>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" name="Password"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Log in" class="btn btn-success" />
    </div>
</form>

<p>
    <a class="btn btn-success" asp-page="Users/Customer/CreateCustomer"> Opret som kunde</a>
    <a class="btn btn-success" asp-page="Users/DeliveryDriver/CreateDeliveryDriver"> Opret som leverandør</a>
</p>

